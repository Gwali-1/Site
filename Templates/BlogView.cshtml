
@{
  Layout = "Layout.cshtml";
}

@model Site.Models.BlogPost

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

    <div class="mx-auto pt-12">  

        <!-- Title + Meta -->
        <header class="mb-8">
            <h1 class="text-4xl font-bold font-[iosevka] mb-2">@Model.Title</h1>
            <p class="text-sm text-gray-500">
                Published on @Model.Date
            </p>
        </header>

        <!-- Content -->
        <article class="prose prose-lg max-w-none">
            @Raw(Model.Content)
        </article>
    </div>
</html>
