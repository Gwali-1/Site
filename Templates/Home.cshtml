      @{
          Layout = "Layout.cshtml";
      }


      @model Site.Models.HomeDataContext


      <div class="pt-12 pb-12" >

        <div class="container mx-auto flex flex-col md:flex-row gap-12 ">

          <div class="md:w-3/4 w-full ">
            <div class="flex items-center gap-2">
              <h2 class="text-xl font-bold  font-[iosevka] mb-0 text[#233038]">Matthew Gwalisam</h2>
              <img src="/swytchserver/static/flag.svg" class="w-6 h-6" alt="Ghana flag">
            </div>
            <p class="text-gray-500 hover:text-gray-700 transition-colors duration-200 mt-0">Programmer</p>
            <p class="pt-4 font-normal">
              Welcome to my site, I’m Gwalisam.You can check out 
              <a href="/projects" class="inline-block bg-[#075056] text-white px-1  rounded text-sm hover:opacity-75 transition-opacity duration-200">Projects</a> I’ve been working on, read stuff I’ve
              <a href="/blog" class="inline-block bg-[#075056] text-white px-1  rounded text-sm hover:opacity-75 transition-opacity duration-200">written</a>, or learn more about me
              <a href="/about" class="inline-block bg-[#075056] text-white px-1  rounded text-sm hover:opacity-75 transition-opacity duration-200">here</a>.
            </p>
            <div class="flex gap-4 mt-2 p-2">
              <a href="https://github.com/your-github" target="_blank" class="hover:opacity-75 transition-opacity duration-200">
                <img src="/swytchserver/static/github-mark.svg" class="w-6 h-6" alt="GitHub">
              </a>
              <a href="https://twitter.com/your-twitter" target="_blank" class="hover:opacity-75 transition-opacity duration-200">
                <img src="/swytchserver/static/twitter.svg" class="w-6 h-6" alt="Twitter">
              </a>
            </div>
          </div>
        </div>

      

        <div class="container mx-auto mt-12">
          <h2 class="text-sm font-bold text-[#075056]">Recent Blogs</h2>
          <ul class="flex flex-col gap-2 pt-5">

            @foreach (var blog in @Model.Blogs)
            {
            <li class="w-full md:w-2/3">
              <a href="/post/@blog.Slug  " class="flex justify-between items-center hover:underline">
                <span>@blog.Title</span>
                <span class="text-gray-500 text-sm">@blog.Date</span>
              </a>
            </li>
            }
          </ul>
        </div>
        <div class="pt-3 ">
          <a href="/blog" class="font-normal text-small text-[#075056] hover:underline">View all posts</a>
        </div>

        <div class="container mx-auto mt-12">
          <h2 class="text-sm font-bold mb-6 text-[#075056]">Featured Projects</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

            @foreach(var project in @Model.Projects )
            {
            <!-- Project Card 1 -->
            <div class="rounded-lg overflow-hidden shadow-md border border-gray-300">
              <img src="/swytchserver/static/project.svg" alt="Project 1" class="w-full h-30 object-cover">
              <div class="p-2">
                <h3 class="text-normal font-semibold mb-2 text-[#233038]">@project.Name</h3>
                <p class="text-gray-600 mb-2">@project.Description</p>
                <a href="@project.Url" class="text-[#075056] hover:underline">@project.Name</a>
              </div>
            </div>
            }
          </div>
        </div>

      </div>


